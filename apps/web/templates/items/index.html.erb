<h2>商品一覧</h2>


<% if items.any? %>
<table id="task_table" class="table" border="1">
  <tr>
　　<th>商品名</th>
　　<th>価格</th>
    <th>削除</th>
　</tr>
  <tbody>
  <% items.each do |item| %>
    <tr>
      <td>
        <%= item.title %>
      </td>
      <td>
        <%= item.price %>
      </td>
      <td>
        <%=
          form_for :item, routes.item_path(item.id), method: :delete do
            submit 'Delete'
          end
        %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
  <p class="placeholder">There are no items yet.</p>
<% end %>


<%= link_to '商品追加', routes.new_item_path %>
